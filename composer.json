{
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "preferred-install": {
      "*": "dist"
    }
  },
  "description": "Scaffold and provision local development for hit.lib.unb.ca",
  "license": "MIT",
  "minimum-stability": "dev",
  "name": "unb-libraries/hit.lib.unb.ca",
  "prefer-stable": true,
  "replace": {
    "drupal/core": "*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require-dev": {
    "drupal/bootstrap4": "2.1.14",
    "unb-libraries/dockworker-drupal": "^4"
  },
  "scripts": {
    "post-update-cmd": [
      "vendor/bin/dockworker dockworker:git:setup-hooks"
    ]
  }
}
